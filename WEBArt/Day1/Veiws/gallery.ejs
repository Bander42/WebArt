<!-- views/gallery.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Image Gallery</title>
</head>
<body>
  <h1>Image Gallery</h1>
  <div class="image-grid">
    <% sortedImageData.forEach(image => { %>
      <div class="image-card">
        <img src="/uploads/<%= image.filename %>" alt="<%= image.filename %>">
        <p>Category: <%= image.category %></p>
      </div>
    <% }); %>
  </div>
</body>
</html>
